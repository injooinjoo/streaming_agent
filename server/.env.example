# Streaming Agent Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# === Required Variables ===

# Secret key for signing JWT access tokens
# Minimum length: 32 characters
# Generate with: openssl rand -hex 32
JWT_SECRET=

# Secret key for signing JWT refresh tokens
# Minimum length: 32 characters
# Generate with: openssl rand -hex 32
JWT_REFRESH_SECRET=

# === Server Configuration ===

# Server port
# Default: 3001
# PORT=3001

# Environment (development/production)
# Default: development
# NODE_ENV=development

# Frontend URL for CORS and redirects
# Default: http://localhost:5173
# CLIENT_URL=http://localhost:5173

# Backend URL for OAuth callbacks
# Default: http://localhost:3001
# SERVER_URL=http://localhost:3001

# === OAuth Configuration ===
# Configure these to enable social login

# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Naver OAuth
# NAVER_CLIENT_ID=
# NAVER_CLIENT_SECRET=

# Twitch OAuth
# TWITCH_CLIENT_ID=
# TWITCH_CLIENT_SECRET=

# SOOP OAuth
# SOOP_CLIENT_ID=
# SOOP_CLIENT_SECRET=

# === Database Configuration ===

# Database type selection
# development: Uses SQLite (default)
# staging/production: Uses PostgreSQL via DATABASE_URL
# NODE_ENV=development

# PostgreSQL connection URL (staging/production)
# Format: postgres://user:password@host:port/database
# For Supabase: Use the connection string from Project Settings > Database
# DATABASE_URL=

# Disable SSL for local PostgreSQL (optional)
# DATABASE_SSL=false

# === Supabase Configuration (if using Supabase) ===

# Supabase project URL
# SUPABASE_URL=https://xxxxx.supabase.co

# Supabase anonymous key (safe for client-side)
# SUPABASE_ANON_KEY=

# Supabase service key (server-side only, keep secret!)
# SUPABASE_SERVICE_KEY=

# Direct database connection (alternative to DATABASE_URL)
# SUPABASE_DB_URL=postgresql://postgres:[password]@db.xxxxx.supabase.co:5432/postgres

# === Cache Configuration ===

# Redis connection URL (production only)
# Format: redis://user:password@host:port
# For Render: Use the Internal Redis URL
# REDIS_URL=

# === External APIs ===

# Riot Games API key for game stats
# RIOT_API_KEY=

# === Admin Configuration ===

# Admin dashboard access code
# ADMIN_ACCESS_CODE=

# === Backup Configuration (GCS) ===

# Google Cloud Storage bucket name
# GCS_BACKUP_BUCKET=streaming-agent-backups

# Google Cloud Project ID (required for backup)
# GCS_PROJECT_ID=

# Path to GCS service account key file
# GCS_KEY_FILE=/path/to/service-account.json

# Webhook URL for backup notifications (Discord/Slack)
# BACKUP_WEBHOOK_URL=
