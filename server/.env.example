# Streaming Agent Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# === Required Variables ===

# Secret key for signing JWT access tokens
# Minimum length: 32 characters
# Generate with: openssl rand -hex 32
JWT_SECRET=

# Secret key for signing JWT refresh tokens
# Minimum length: 32 characters
# Generate with: openssl rand -hex 32
JWT_REFRESH_SECRET=

# === Server Configuration ===

# Server port
# Default: 3001
# PORT=3001

# Environment (development/production)
# Default: development
# NODE_ENV=development

# Frontend URL for CORS and redirects
# Default: http://localhost:5173
# CLIENT_URL=http://localhost:5173

# Backend URL for OAuth callbacks
# Default: http://localhost:3001
# SERVER_URL=http://localhost:3001

# === OAuth Configuration ===
# Configure these to enable social login

# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Naver OAuth
# NAVER_CLIENT_ID=
# NAVER_CLIENT_SECRET=

# Twitch OAuth
# TWITCH_CLIENT_ID=
# TWITCH_CLIENT_SECRET=

# SOOP OAuth
# SOOP_CLIENT_ID=
# SOOP_CLIENT_SECRET=

# === Database Configuration ===

# PostgreSQL connection URL (production only)
# Format: postgres://user:password@host:port/database
# For Render: Use the Internal Database URL
# DATABASE_URL=

# === Cache Configuration ===

# Redis connection URL (production only)
# Format: redis://user:password@host:port
# For Render: Use the Internal Redis URL
# REDIS_URL=

# === External APIs ===

# Riot Games API key for game stats
# RIOT_API_KEY=

# === Admin Configuration ===

# Admin dashboard access code
# ADMIN_ACCESS_CODE=

# === Snowflake Data Warehouse ===

# Snowflake account identifier (e.g., ABC12345.us-east-1)
# SNOWFLAKE_ACCOUNT=

# Snowflake username
# SNOWFLAKE_USER=

# Snowflake password
# SNOWFLAKE_PASSWORD=

# Snowflake warehouse name
# SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Snowflake database name
# SNOWFLAKE_DATABASE=STREAMING_ANALYTICS

# Snowflake schema name
# SNOWFLAKE_SCHEMA=STREAMING

# Snowflake role
# SNOWFLAKE_ROLE=ACCOUNTADMIN

# Enable Snowflake sync (true/false)
# SNOWFLAKE_ENABLED=false

# === YouTube API ===

# YouTube Data API v3 key
# YOUTUBE_API_KEY=

# YouTube OAuth Client ID
# YOUTUBE_CLIENT_ID=

# YouTube OAuth Client Secret
# YOUTUBE_CLIENT_SECRET=

# === Twitch API ===

# Twitch EventSub webhook secret
# TWITCH_WEBHOOK_SECRET=
